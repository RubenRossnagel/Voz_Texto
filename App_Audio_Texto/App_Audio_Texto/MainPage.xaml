<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Audio_Texto.MainPage">

    <StackLayout Padding="20">
        <Frame BackgroundColor="#2196F3" CornerRadius="15" HasShadow="True">
            <Label x:Name="transcribedText" TextColor="White" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
        </Frame>

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,20,0,0">
            <Button x:Name="transcribeButton" Text="Habla" BackgroundColor="#2196F3" TextColor="White" CornerRadius="10" FontSize="Large" HeightRequest="50" WidthRequest="150" Clicked="TranscribeClicked"/>
            <ActivityIndicator x:Name="transcribingIndicator" IsRunning="False" Color="#2196F3" VerticalOptions="CenterAndExpand" HorizontalOptions="End"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
